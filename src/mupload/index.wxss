.mupload {
  background: #eee;
  margin: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.mupload__item,
.mupload__button {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.mupload__button {
  border: 1px dashed #ccc;
  line-height: 150rpx;
  text-align: center;
  color: #43ac43;
  background: #fff;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.mupload__button--large {
  width: 100%;
  font-size: 32rpx;
  flex-direction: row;
  justify-content: center;
  margin-right: 0;
}

.button__icon {
  height: 40rpx;
  font-size: 48rpx;
}

.mupload__item {
  position: relative;
  background: #999;
  float: left;
}

.mupload__close {
  top: -23rpx;
  right: -23rpx;
  position: absolute;
  width: 46rpx;
  height: 46rpx;
  background: white;
  border-radius: 50rpx;
  text-align: center;
  line-height: 46rpx;
  z-index: 500;
}

.mupload__img {
  width: 100%;
  height: 100%;
}
