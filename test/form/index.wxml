<view class="page">
  <view class="page__hd">
    <view class="page__title">
      模版消息样例
    </view>
  </view>
  <view class="page__bd">
    <form bindsubmit="formSubmit" bindreset="formReset" report-submit="true">

      <view class="weui-cells__title">表单</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">内容</view>
          </view>
          <view class="weui-cell__bd">
            <input type="text" name="uname" class="weui-input" placeholder="请输入内容" />
          </view>
        </view>
      </view>

      <view class="weui-cells__title">选择</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_select">
              <view class="weui-cell__hd" style="width: 105px">
                <picker bindchange="bindCountryCodeChange" value="{{countryCodeIndex}}" range="{{countryCodes}}" name="country">
                  <view class="weui-select">{{countryCodes[countryCodeIndex]}}</view>
                </picker>
              </view>
              <view class="weui-cell__bd weui-cell__bd_in-select-before">
                <input class="weui-input" placeholder="请输入号码" name="phone" />
              </view>
          </view>
      </view>

      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" form-type="submit">确定</button>
        <button class="weui-btn" type="default" form-type="reset">清空</button>
      </view>
    </form>
  </view>
</view>
