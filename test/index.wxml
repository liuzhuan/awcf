<view class="page">
  <view class="page__hd">
    <view class="page__title">数据统计测试</view>
  </view>
  <view class="page__bd">
    <form bindsubmit="formSubmit">
      <view class="weui-cells__title">创建项目</view>
      <view class="weui-cells weui-cells_after-title">

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">金额</view>
          </view>
          <view class="weui-cell__bd">
            <input type="text" id="amount" class="weui-input" bindinput="input" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">标题</view>
          </view>
          <view class="weui-cell__bd">
            <input type="text" id="title" class="weui-input" bindinput="input" />
          </view>
        </view>
      </view>

      <view class="weui-cells__title">详情</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea cols="30" rows="10" id="description" class="weui-textarea" bindinput="input" />
          </view>
        </view>
      </view>

      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" formType="submit">提交</button>
      </view>
    </form>
  </view>
</view>
